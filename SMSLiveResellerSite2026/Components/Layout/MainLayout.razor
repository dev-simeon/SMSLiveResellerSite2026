@code {
    private bool hideMainMenu = false;
    private bool hideDropdown = true;
    private bool hideNavDropdown = true;

    private string? avatarUrl;
    private string? fullName;

    private void ToggleMenu() => hideMainMenu = !hideMainMenu;
    private void ToggleNavDropdown() => hideNavDropdown = !hideNavDropdown;
    private async Task HideNavDropdown()
    {
        await Task.Delay(200);
        hideNavDropdown = true;
    }
    private void ToggleDropdown() => hideDropdown = !hideDropdown;
    private async Task HideDropdown()
    {
        await Task.Delay(200);
        hideDropdown = true;
    }

    // Moved JS-interop backed call here so it runs after rendering (JS interop is available).
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
            return;

        try
        {
            var member = await ((SmsAuthProvider)auth).GetMember();

            if (member != null)
            {
                fullName = member.Email?.ToLower();
                // avatarUrl = member.AvatarUrl;
                await InvokeAsync(StateHasChanged);
            }
        }
        catch (InvalidOperationException)
        {
            // JS interop not available yet; swallow or log as appropriate.
        }
    }
}
